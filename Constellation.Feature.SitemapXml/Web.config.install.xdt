<?xml version="1.0" encoding="utf-8" ?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
	<system.webServer>
		<handlers>
			<add verb="*" name="robots" path="robots.txt" type="Constellation.Feature.SitemapXml.RobotsTxtHandler, Constellation.Feature.SitemapXml" xdt:Transform="InsertBefore(/configuration/system.webServer/handlers/*)" />
			<add verb="*" name="sitemap" path="sitemap.xml" type="Constellation.Feature.SitemapXml.SitemapXmlHandler, Constellation.Feature.SitemapXml" xdt:Transform="InsertBefore(/configuration/system.webServer/handlers/*)" />
		</handlers>
	</system.webServer>
</configuration>